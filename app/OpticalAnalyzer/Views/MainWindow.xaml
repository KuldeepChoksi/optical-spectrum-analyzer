<Window x:Class="OpticalAnalyzer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:vm="clr-namespace:OpticalAnalyzer.ViewModels"
        Title="Optical Spectrum Analyzer" 
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardPanel}" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Optical Spectrum Analyzer" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Quality Control for Optical Components" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ“‚ Load Data" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding LoadDataCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="â–¶ Run Analysis" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding RunAnalysisCommand}"
                            IsEnabled="{Binding IsDataLoaded}"
                            Margin="0,0,10,0"/>
                    <Button Content="ðŸ“„ Export Report" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding ExportReportCommand}"
                            IsEnabled="{Binding IsAnalysisComplete}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Sample List -->
            <Border Grid.Column="0" Style="{StaticResource CardPanel}" Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Samples" 
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,10,0,10">
                        <TextBlock Foreground="{StaticResource TextSecondaryBrush}">
                            <Run Text="File: "/>
                            <Run Text="{Binding LoadedFileName, FallbackValue='None'}" FontWeight="SemiBold"/>
                        </TextBlock>
                        <TextBlock Foreground="{StaticResource TextSecondaryBrush}">
                            <Run Text="Samples: "/>
                            <Run Text="{Binding TotalSamples}" FontWeight="SemiBold"/>
                            <Run Text=" | Materials: "/>
                            <Run Text="{Binding TotalMaterials}" FontWeight="SemiBold"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <ListBox Grid.Row="2" 
                             ItemsSource="{Binding SampleIds}"
                             SelectedItem="{Binding SelectedSampleId}"
                             BorderThickness="1"
                             BorderBrush="#E2E8F0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Padding="5,3"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Center: Spectrum Chart -->
            <Border Grid.Column="1" Style="{StaticResource CardPanel}" Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Transmission Spectrum" 
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0">
                            <Run Text="Material: "/>
                            <Run Text="{Binding CurrentSpectrum.MaterialType, FallbackValue='Select a sample'}" 
                                 FontWeight="SemiBold"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <lvc:CartesianChart Grid.Row="1"
                                        Series="{Binding SpectrumSeries}"
                                        XAxes="{Binding XAxes}"
                                        YAxes="{Binding YAxes}"
                                        ZoomMode="X"/>
                </Grid>
            </Border>
            
            <!-- Right Panel: Analysis Results -->
            <Border Grid.Column="2" Style="{StaticResource CardPanel}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Analysis Results" 
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>
                        
                        <!-- Summary Stats -->
                        <Border Background="#F1F5F9" CornerRadius="6" Padding="15" Margin="0,0,0,15"
                                Visibility="{Binding IsAnalysisComplete, Converter={StaticResource BoolToVisibility}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,10">
                                    <TextBlock Text="Pass Rate" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock FontSize="24" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}">
                                        <Run Text="{Binding PassRate, StringFormat={}{0:F1}}"/><Run Text="%"/>
                                    </TextBlock>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,0,10">
                                    <TextBlock Text="Failed" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock FontSize="24" FontWeight="Bold" Foreground="{StaticResource DangerBrush}"
                                               Text="{Binding FailCount}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                                    <TextBlock Text="Grade Distribution" FontSize="11" 
                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#22C55E" CornerRadius="3" Padding="8,3" Margin="0,0,5,0">
                                            <TextBlock Text="{Binding ExcellentCount}" Foreground="White" FontSize="11"/>
                                        </Border>
                                        <Border Background="#3B82F6" CornerRadius="3" Padding="8,3" Margin="0,0,5,0">
                                            <TextBlock Text="{Binding GoodCount}" Foreground="White" FontSize="11"/>
                                        </Border>
                                        <Border Background="#F59E0B" CornerRadius="3" Padding="8,3" Margin="0,0,5,0">
                                            <TextBlock Text="{Binding FairCount}" Foreground="White" FontSize="11"/>
                                        </Border>
                                        <Border Background="#EF4444" CornerRadius="3" Padding="8,3">
                                            <TextBlock Text="{Binding PoorCount}" Foreground="White" FontSize="11"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Current Sample Results -->
                        <TextBlock Text="Selected Sample" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
                        
                        <StackPanel DataContext="{Binding CurrentResult}">
                            <!-- Quality Grade Badge -->
                            <Border CornerRadius="6" Padding="12,8" Margin="0,0,0,15"
                                    Background="{Binding GradeColor}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Grade}" 
                                               FontSize="18" FontWeight="Bold" 
                                               Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding PassFailText}" 
                                               FontSize="12" Foreground="White" 
                                               HorizontalAlignment="Center" Opacity="0.9"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Metrics -->
                            <TextBlock Text="Transmission Metrics" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                            
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Peak Transmission" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" FontWeight="SemiBold">
                                    <Run Text="{Binding PeakTransmission, StringFormat={}{0:F1}}"/><Run Text="%"/>
                                </TextBlock>
                            </Grid>
                            
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Avg Visible (400-700nm)" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" FontWeight="SemiBold">
                                    <Run Text="{Binding AvgVisibleTransmission, StringFormat={}{0:F1}}"/><Run Text="%"/>
                                </TextBlock>
                            </Grid>
                            
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Bandwidth (&gt;80%)" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" FontWeight="SemiBold">
                                    <Run Text="{Binding TransmissionBandwidthNm, StringFormat={}{0:F0}}"/><Run Text=" nm"/>
                                </TextBlock>
                            </Grid>
                            
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Uniformity Score" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" FontWeight="SemiBold">
                                    <Run Text="{Binding UniformityScore, StringFormat={}{0:F1}}"/><Run Text="%"/>
                                </TextBlock>
                            </Grid>
                            
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Defects Detected" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" FontWeight="SemiBold"
                                           Foreground="{Binding DefectCount, Converter={StaticResource DefectCountToColor}}"
                                           Text="{Binding DefectCount}"/>
                            </Grid>
                            
                            <Button Content="View Full Report" 
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding DataContext.ShowSampleReportCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#E2E8F0" CornerRadius="4" Padding="15,10" Margin="0,15,0,0">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="{StaticResource TextSecondaryBrush}"/>
        </Border>
    </Grid>
</Window>